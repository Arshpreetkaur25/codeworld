#include <stdio.h>
#include <stdlib.h>

int main()
{int i, fact=1, num;
 char ans;

    printf("****FACTORIAL CALCULATOR****");
   do{

     printf("\n Enter the number:");
     scanf("%d",&num);
       for(int i=1; i<=num; i++)
      {
        fact=fact*i;
      }
     printf("The factorial of the given number %d is %d",num,fact);
     printf("\n Do you want to continue?(Y/N");
     scanf("%c",&ans);
    }while(ans=="Y");
    return 0;
}
